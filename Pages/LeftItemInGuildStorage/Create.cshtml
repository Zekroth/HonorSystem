@page
@model HonorSystem.Pages.LeftItemInGuildStorage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Inserisci Item</h1>
<hr />

<div class="row">
    <div class="col-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Leftiteminguildstorage.CurrentPriceInLucent" class="control-label">Prezzo Corrente (Lucent)</label>
                <input asp-for="Leftiteminguildstorage.CurrentPriceInLucent" class="form-control bg-dark" />
                <span asp-validation-for="Leftiteminguildstorage.CurrentPriceInLucent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leftiteminguildstorage.IdItem" class="control-label">Item</label>
                <select asp-for="Leftiteminguildstorage.IdItem" class="form-control bg-dark"
                    asp-items="ViewBag.IdItem"></select>
            </div>
            <div class="form-group">
                <label asp-for="Leftiteminguildstorage.IdHonorEntry" class="control-label"></label>
                <select asp-for="Leftiteminguildstorage.IdHonorEntry" class="form-control bg-dark"
                    asp-items="ViewBag.IdHonorEntry"></select>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
