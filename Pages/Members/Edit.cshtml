@page
@model HonorSystem.Pages.Members.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica Membro</h1>

<h4>@Html.DisplayFor(model => model.Member.Name)</h4>
<hr />

<div class="row">
    <div class="col-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.IdMembers" />
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label">Nome Player</label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.CharacterName" class="control-label">Nome 1° PG</label>
                <input asp-for="Member.CharacterName" class="form-control" />
                <span asp-validation-for="Member.CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.SecondaryCharacterName" class="control-label">Nome 2° PG</label>
                <input asp-for="Member.SecondaryCharacterName" class="form-control" />
                <span asp-validation-for="Member.SecondaryCharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.JoinDate" class="control-label">Data Ingresso Gilda</label>
                <input asp-for="Member.JoinDate" class="form-control" />
                <span asp-validation-for="Member.JoinDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.IsActive" class="control-label">Membro Attivo</label>
                <select asp-for="Member.IsActive" class="form-control">
                    <option value="1">Sì</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="Member.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.IsStillInGuild" class="control-label">È in gilda</label>
                <select asp-for="Member.IsStillInGuild" class="form-control">
                    <option value="1">Sì</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="Member.IsStillInGuild" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
