@page
@model HonorSystem.Pages.Members.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Dettagli</h1>
<h4>@Html.DisplayFor(model => model.Member.Name)</h4>
<hr />

<div>
    <dl class="row custom-container-sidebar">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
        <dt class="col-sm-2">
            ID 1° Discord
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.CharacterName)
        </dd>
        <dt class="col-sm-2">
            ID 2° Discord
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.SecondaryCharacterName)
        </dd>
        <dt class="col-sm-2">
            Data Ingresso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.JoinDate)
        </dd>
        <dt class="col-sm-2">
            Attivo
        </dt>
        <dd class="col-sm-10">
            @if (Model.Member.IsActive == 1)
            {
                <span><i class="bi bi-check-circle-fill" style="color: green;"></i></span>
            }
            else
            {
                <span><i class="bi bi-x-circle-fill" style="color: red;"></i></span>
            }
        </dd>
        <dt class="col-sm-2">
            In gilda
        </dt>
        <dd class="col-sm-10">
            @if (Model.Member.IsStillInGuild == 1)
            {
                <span><i class="bi bi-check-circle-fill" style="color: green;"></i></span>
            }
            else
            {
                <span><i class="bi bi-x-circle-fill" style="color: red;"></i></span>
            }
        </dd>
        <dt>
            <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@Model.Member?.IdMembers">Salva</a>
            <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
        </dt>        
    </dl>
</div>
