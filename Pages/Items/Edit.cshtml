@page
@model HonorSystem.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.IdItem" />
            <div class="form-group">
                <label asp-for="Item.ItemName" class="control-label">Item</label>
                <input asp-for="Item.ItemName" class="form-control bg-dark" />
                <span asp-validation-for="Item.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.IdBoss" class="control-label">Boss</label>
                <select asp-for="Item.IdBoss" class="form-control bg-dark" asp-items="ViewBag.IdBoss"></select>
                <span asp-validation-for="Item.IdBoss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
