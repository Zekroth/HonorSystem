@page
@model HonorSystem.Pages.HonorEntryTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!-- Datatable -->
<script>
    window.onload = function() {
        $('#honorEntryTypeTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "pageLength": 25,
            "language": {
                "lengthMenu": "Mostra _MENU_ righe per pagina",
                "search": "Cerca:",
                "info": "Mostra da _START_ a _END_ di _TOTAL_ righe",
                "infoEmpty": "Nessuna riga disponibile",
                "paginate": {
                    "next": "Avanti",
                    "previous": "Indietro"
                }
            }
        });
    };
</script>

<h1>Tipi di Punteggio</h1>
<hr />

<div class="form-group">
    <a asp-page="Create" class="btn btn-primary">Inserisci Tipo di Punteggio</a>
</div>

<div class="table-responsive" style="padding-left: 10px; padding-right: 10px;">
    <table id="honorEntryTypeTable" class="display table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Tipo
                </th>
                <th>
                    Punteggio
                </th>
                <th>
                    Descrizione
                </th>
                <th>
                    Scadenza
                </th>
                <th>
                    Admin
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Honorentrytype)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DefaultPoints)
                    </td>
                    <td  style="word-wrap: break-word; max-width: 300px; white-space: normal;">
                        @item.Description
                    </td>
                    <td>
                        @item.Expiration
                    </td>
                    <td style="width: auto;">
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.IdHonorEntryType"
                            data-bs-toggle="tooltip" title="Modifica"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="./Details" class="btn btn-secondary" asp-route-id="@item.IdHonorEntryType"
                            data-bs-toggle="tooltip" title="Dettagli"><i class="bi bi-eye"></i></a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.IdHonorEntryType"
                            data-bs-toggle="tooltip" title="Elimina"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
