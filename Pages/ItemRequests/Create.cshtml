@page
@model HonorSystem.Pages.ItemRequests.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Inserimento Richiesta Item</h4>
<hr />

<div class="row">
    <div class="col-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Itemrequest.IsSupplied" class="control-label">Disponibile</label>
                <input asp-for="Itemrequest.IsSupplied" class="form-control bg-dark" />
                <span asp-validation-for="Itemrequest.IsSupplied" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itemrequest.ItemId" class="control-label">Item</label>
                <select asp-for="Itemrequest.ItemId" class="form-control bg-dark" asp-items="ViewBag.ItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Itemrequest.PlayerId" class="control-label">Player</label>
                <select asp-for="Itemrequest.PlayerId" class="form-control bg-dark" asp-items="ViewBag.PlayerId"></select>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
