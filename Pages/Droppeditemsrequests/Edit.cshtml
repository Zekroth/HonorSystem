@page
@model HonorSystem.Pages.DroppedItemsRequests.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica</h1>
<hr />

<div class="row custom-container-sidebar col-auto">

    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Droppeditemsrequest.IdDroppedItemsRequests" />
        <div class="form-group">
            <label asp-for="Droppeditemsrequest.IdMember" class="control-label"></label>
            <select asp-for="Droppeditemsrequest.IdMember" class="form-control bg-dark" asp-items="ViewBag.MemberId"></select>
            <span asp-validation-for="Droppeditemsrequest.IdMember" class="text-danger"></span>
        </div>

        @if(ViewBag.ItemId != null)
        {
            <div class="form-group">
                <label asp-for="Droppeditemsrequest.IdLeftItemInGuildStorage" class="control-label"></label>
                <select asp-for="Droppeditemsrequest.IdLeftItemInGuildStorage" class="form-control bg-dark" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="Droppeditemsrequest.IdLeftItemInGuildStorage" class="text-danger"></span>
            </div>
        }

        <div class="form-group">
            <label asp-for="Droppeditemsrequest.RequestDate" class="control-label"></label>
            <input asp-for="Droppeditemsrequest.RequestDate" class="form-control bg-dark" type="date" />
            <span asp-validation-for="Droppeditemsrequest.RequestDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Droppeditemsrequest.Reason" class="control-label"></label>
            <input asp-for="Droppeditemsrequest.Reason" class="form-control bg-dark" />
            <span asp-validation-for="Droppeditemsrequest.Reason" class="text-danger"></span>
        </div>

        <!-- Bottoni -->
        <div class="form-group">
            <input type="submit" value="Salva" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}