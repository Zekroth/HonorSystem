@page
@model HonorSystem.Pages.Droppeditemsrequests.IndexModel

@{
    ViewData["Title"] = "Dropped Items Requests";
}

<!-- Datatable -->
<script>
    window.onload = function() {
        $('#droppedItemsTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "language": {
                "lengthMenu": "Mostra _MENU_ righe per pagina",
                "search": "Cerca:",
                "info": "Mostra da _START_ a _END_ di _TOTAL_ righe",
                "infoEmpty": "Nessuna riga disponibile",
                "paginate": {
                    "next": "Avanti",
                    "previous": "Indietro"
                }
            }
        });
    };
</script>

<h1>Richieste Item Droppati</h1>
<hr />

<div class="form-group">
    <a asp-page="Create" class="btn btn-primary">Inserisci Richiesta</a>
</div>

<div class="table-responsive" style="padding-left: 10px; padding-right: 10px;">
    <table id="droppedItemsTable" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DIRequest[0].IdMember)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DIRequest[0].IdMemberNavigation.Name)
                </th>
                <th>
                    Data di Richiesta
                </th>
                <th>
                    Item Richiesto
                </th>
                <th>
                    Motivazione
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DIRequest)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMember)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMemberNavigation.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdLeftItemInGuildStorageNavigation.IdItemNavigation.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.IdDroppedItemsRequests" data-bs-toggle="tooltip"
                           title="Modifica"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="./Details" class="btn btn-secondary" asp-route-id="@item.IdDroppedItemsRequests" data-bs-toggle="tooltip"
                           title="Dettagli"><i class="bi bi-eye"></i></a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.IdDroppedItemsRequests" data-bs-toggle="tooltip"
                           title="Elimina"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
