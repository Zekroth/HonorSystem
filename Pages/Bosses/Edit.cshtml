@page
@model HonorSystem.Pages.Bosses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Boss</h4>
<hr />
<div class="row">
    <div class="col-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Boss.IdBoss" />
            <div class="form-group">
                <label asp-for="Boss.BossName" class="control-label">Nome Boss</label>
                <input asp-for="Boss.BossName" class="form-control bg-dark" />
                <span asp-validation-for="Boss.BossName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss.IsField" class="control-label">Field Boss</label>
                <select asp-for="Boss.IsField" class="form-control bg-dark">
                    <option value="1">Sì</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="Boss.IsField" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss.IsArch" class="control-label">Arch Boss</label>
                <select asp-for="Boss.IsArch" class="form-control bg-dark">
                    <option value="1">Sì</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="Boss.IsArch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss.IsGuild" class="control-label">Guild Boss</label>
                <select asp-for="Boss.IsGuild" class="form-control bg-dark">
                    <option value="1">Sì</option>
                    <option value="0">No</option>
                </select>
                <span asp-validation-for="Boss.IsGuild" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
